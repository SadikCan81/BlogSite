@page
@model RegisterModel
@using BlogSite.Utility
@{
    ViewData["Title"] = "Register";
}

<div class="py-4 my-4">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row form-group">
        <div class="col-8 offset-2">
            <div class="card">
                <div class="card-body px-lg-5 pt-4">
                    <h3 class="col-12 text-success text-center py-4"><strong>Sign Up</strong></h3>
                    <hr />

                    <form method="post" autocomplete="off" asp-route-returnUrl="@Model.ReturnUrl">
                        <div class="form-row py-2">
                            <div class="col">
                                <div>
                                    <input type="text" asp-for="Input.FirstName" autocomplete="off" placeholder="First Name" class="form-control" />
                                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col">
                                <div>
                                    <input type="text" asp-for="Input.LastName" autocomplete="off" placeholder="Last Name" class="form-control" />
                                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="py-2 ">
                            <input type="email" asp-for="Input.Email" autocomplete="off" placeholder="Mail" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="py-2 ">
                            <input type="text" asp-for="Input.PhoneNumber" autocomplete="off" placeholder="Phone Number" class="form-control" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="py-2 ">
                            <input type="text" asp-for="Input.City" autocomplete="off" placeholder="City" class="form-control" />
                            <span asp-validation-for="Input.City" class="text-danger"></span>
                        </div>
                        <div class="py-2 ">
                            <input type="password" asp-for="Input.Password" autocomplete="off" placeholder="Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="py-2 ">
                            <input type="password" asp-for="Input.ConfirmPassword" autocomplete="off" placeholder="Confirm Password" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        @if (User.Identity.IsAuthenticated && User.IsInRole(SD.AdminRole))
                        {
                            <div class="py-2 ">
                                <input type="radio" name="rdUserRole" value="@SD.AdminRole" /> @SD.AdminRole
                                <input type="radio" name="rdUserRole" value="@SD.UserRole" /> @SD.UserRole
                            </div>
                        }
                        <div class="py-2 ">
                            <button type="submit" class="btn btn-success form-control" style="padding: .375rem .75rem">Register</button>
                        </div>
                        <hr />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
